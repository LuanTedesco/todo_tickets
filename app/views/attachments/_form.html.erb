<%= form_with(model: attachment) do |f| %>
  <div class="row p-2">
    <div class="col-lg-12">
      <% if attachment.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>
          <ul>
            <% attachment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-row">
        <div class="form-group col-md-12 mb-3 px-1">
          <%= f.label :name, style: "display: block", class: "small pb-10" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12 mb-3 px-1">
          <%= f.label :description, style: "display: block", class: "small pb-1" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-row d-flex">
        <div class="form-group col-md-6 mb-3 px-1">
          <%= f.label :file, style: "display: block", class: "small pb-1" %>
          <%= f.file_field :file, class: "form-control", required: true %>
        </div>
        <% if @user.admin? %>
          <div class="form-group col-md-6 mb-3 px-1">
            <%= f.label :status, class: "control-label" %>
            <%= f.select :status, [['Active', true], ['Inactive', false]], {}, class: "form-control" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :ticket_id, value: @ticket.id %>
    </div>
    <div class="form-group col-md-12 mb-3 px-1">
      <%= f.submit class: "btn btn-primary btn-md" %>
    </div>
  </div>
</div>
<% end %>
