<!DOCTYPE html>
<html>
  <head>
    <title>Categories</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="d-flex justify-content-end align-items-center mb-3">
        <%= link_to "New Category", new_category_path, "data-controller":"turbo", class: "btn btn-primary btn-sm" %>
      </div>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Departament</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td><%= category.departament.name %></td>
                <td><%= category.status ? 'Active' : 'Inactive' %></td>
                <td class="text-right">
                  <%= link_to 'Edit', edit_category_path(category), "data-controller":"turbo", class: "btn btn-primary btn-sm" %>
                  <%= link_to "Destroy", category_path(category), method: :delete, class: 'btn btn-danger btn-sm mr-3', data: { turbo_method: :delete, turbo_confirm: 'You sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
