<%= form_with(model: sub_task, class: "form") do |f| %>
  <% if sub_task.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(sub_task.errors.count, "error") %> prohibited this sub_task from being saved:</h4>
      <ul>
        <% sub_task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date_end %>
    <%= f.datetime_field :date_end, class: "form-control" %>
  </div>
  <% if @user.admin? %>
    <div class="col-md-6">
      <%= f.label :status, class: "control-label" %>
      <%= f.select :status, [['Active', true], ['Inactive', false]], {}, class: "form-control" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.hidden_field :ticket_id, value: @ticket.id %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
