<%= form_with(model: tag, class: 'form') do |f| %>
  <% if tag.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="col-md-6">
      <%= f.label :description, class: "control-label" %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
      <% if @user.admin? %>
        <div class="form-group">
          <%= f.label :status, class: "control-label" %>
          <%= f.select :status, [['Active', true], ['Inactive', false]], {}, class: "form-control" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :color, class: "control-label" %>
        <%= f.color_field :color, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group d-flex justify-content-end">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
