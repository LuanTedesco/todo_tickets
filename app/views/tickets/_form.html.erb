<%= form_with(model: ticket) do |form| %>
  <div class="row p-2">
    <div class="col-lg-12">
      <% if ticket.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>
          <ul>
            <% ticket.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-row">
        <div class="form-group col-md-12 mb-3 px-1">
          <%= form.label :title, style: "display: block", class: "small pb-1" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12 mb-3 px-1">
          <%= form.label :description, style: "display: block", class: "small pb-1" %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-row d-flex mb-3">
        <div class="form-group col-md-3 px-1">
          <%= form.label :category_id, style: "display: block", class: "small pb-1" %>
          <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Selecione uma categoria" }, class: "form-select" %>
        </div>
        <div class="form-group col-md-3 px-1">
          <%= form.label :priority_id, style: "display: block", class: "small pb-1" %>
          <%= form.collection_select :priority_id, Priority.all, :id, :name, { prompt: "Selecione uma prioridade" }, class: "form-select" %>
        </div>
        <div class="form-group col-md-3 px-1">
          <%= form.label :column_id, style: "display: block", class: "small pb-1" %>
          <%= form.collection_select :column_id, Column.all, :id, :title, { prompt: "Selecione um status" }, class: "form-select" %>
        </div>
        <div class="form-group col-md-3 px-1">
          <%= form.label :departament_id, style: "display: block", class: "small pb-1" %>
          <%= form.collection_select :departament_id, Departament.all, :id, :name, { prompt: "Selecione um departamento" }, class: "form-select" %>
        </div>
      </div>
      <div class="form-row d-flex mb-3 align-items-end">
        <div class="form-group col-md-6 px-1">
          <%= form.label :company_id, style: "display: block", class: "small pb-1" %>
          <%= form.collection_select :company_id, Company.all, :id, :name, { prompt: "Selecione uma empresa" }, class: "form-select" %>
        </div>
        <div class="form-group col-md-2 px-1">
          <% if params[:action] == 'edit' %>
            <%= link_to 'Edit', edit_company_path(@ticket.company_id), class: 'btn btn-primary' %>
          <% end %>
        </div>
        <div class="form-group  col-md-4 px-1">
          <%= form.label :user_id, "User responsable" ,style: "display: block", class: "small pb-1" %>
          <%= form.collection_select :user_id, User.all, :id, :name, { prompt: "Selecione um usuário" }, class: "form-select" %>
        </div>
      </div>
      <div class="form-row d-flex mb-3">
        <div class="form-group col-md-4 px-1">
          <%= form.label :date_end, style: "display: block", class: "small pb-1" %>
          <%= form.datetime_field :date_end, class: "form-control" %>
        </div>
        <div class="form-group col-md-4 px-1">
          <%= form.label :automation_hours, style: "display: block", class: "small pb-1" %>
          <%= form.number_field :automation_hours, class: "form-control" %>
        </div>
        <div class="form-group col-md-4 px-1">
          <%= form.label :execution_hours, style: "display: block", class: "small pb-1" %>
          <%= form.number_field :execution_hours, class: "form-control" %>
        </div>
      </div>
      <div class="form-row d-flex mb-3">
        <div class="form-group col-md-4 px-1">
          <%= form.label :tags, class: "control-label" %>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="tagDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Selecione as tags
            </button>
            <div class="dropdown-menu" aria-labelledby="tagDropdown">
              <input type="text" id="tagSearch" class="form-control" placeholder="Pesquisar tags">
              <div class="tag-list">
                <% @tags.each do |tag| %>
                  <div class="form-check">
                    <%= check_box_tag "ticket[tag_ids][]", tag.id, @ticket.tag_ids.include?(tag.id), id: "tag_#{tag.id}", class: "form-check-input" %>
                    <%= label_tag "tag_#{tag.id}", tag.name, class: "form-check-label" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group col-md-4 px-1">
          <%= form.label :selected_tags, class: "control-label" %>
          <div class="selected-tags">
            <% @ticket.tags.each do |tag| %>
              <span class="badge badge-primary" style="background-color: <%= tag.color %>;"><%= tag.name %></span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-row d-flex justify-content-between py-3 px-1">
        <div>
          <button type="button" class="btn btn-danger btn-md" data-bs-dismiss="modal">Cancel</button>
          <% unless action_name == 'new' %>
            <%= link_to "Copy Link", "#", id: "copy-ticket-link", class: "btn btn-primary ml-2", href: edit_ticket_url(@ticket) %>
          <% end %>
        </div>
        <%= form.submit class: "btn btn-primary btn-md" %>
      </div>
    </div>
  </div>
<% end %>
<script>
  document.getElementById('copy-ticket-link').addEventListener('click', function (event) {
    event.preventDefault();
    var ticketLink = this.getAttribute('href');
    navigator.clipboard.writeText(ticketLink);
    alert('Link do ticket copiado para a área de transferência');
  });
</script>
