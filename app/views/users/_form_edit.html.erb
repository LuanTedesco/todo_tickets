<%= form_with(model: user, class: 'form') do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row justify-content-center align-items-center mr-2">
    <div class="col-md-4 text-center">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, class: 'img-profile rounded-circle img-fluid custom-avatar' %>
      <% else %>
        <%= image_tag 'default-avatar.png', class: 'img-profile rounded-circle img-fluid custom-avatar' %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-6">
          <%= f.label :name, class: "control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.label :password, class: "control-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :password_confirmation, class: "control-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.label :change_avatar, class: "control-label" %>
          <%= f.file_field :avatar, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :departament_id, class: "control-label" %>
          <%= f.collection_select :departament_id, Departament.all, :id, :name, { prompt: "Select Departament"}, class: "form-select" %>
        </div>
      </div>
      <div class="form-group d-flex justify-content-end mt-3">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
